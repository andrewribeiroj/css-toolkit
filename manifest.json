{
    "name": "CSS Toolkit",
    "description": "Customer Service and Support tools for daily Web Hosting Support tasks",
    "author": "Andrew Ribeiro",
    "version": "0.0.1",
    "manifest_version": 3,
    "icons": {
        "128": "images/globe-icon.png"
    },
    "action": {
        "default_popup": "index/popup/popup.html",
        "default_icon": {}
    },
    "options_page": "index/options/options.html",
    "background": {
        "service_worker": "service-workers/background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "contextMenus",
        "clipboardWrite",
        "scripting"
    ]
}