{
    "name": "Domain Analysis Toolkit",
    "description": "Domain analysis tools for daily domains and websites management",
    "author": "Andrew Ribeiro",
    "version": "1.0.0",
    "manifest_version": 3,
    "icons": {
        "128": "images/globe-icon.png"
    },
    "action": {
        "default_popup": "app/popup/index.html",
        "default_icon": {}
    },
    "options_page": "app/options/options.html",
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "contextMenus",
        "clipboardWrite",
        "scripting"
    ],
    "background": {
        "service_worker": "app/service-workers/background.js"
    }
}